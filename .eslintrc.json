{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": [
    "eslint:recommended",
    "wordpress"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "globals": {
    "wp": "readonly",
    "ajaxurl": "readonly",
    "aiWidgetData": "readonly",
    "aiWidgetNonce": "readonly",
    "aiWidgetAjaxUrl": "readonly",
    "AIWGeo": "readonly",
    "aiwTranslationDebug": "readonly"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-console": "warn",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "camelcase": ["error", { "properties": "never" }],
    "max-len": ["warn", { "code": 120, "ignoreUrls": true, "ignoreStrings": true }],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "comma-dangle": ["error", "never"],
    "no-var": "error",
    "prefer-const": "warn",
    "arrow-spacing": "error",
    "prefer-arrow-callback": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "vendor/",
    "*.min.js",
    "dist/",
    "build/"
  ]
}
